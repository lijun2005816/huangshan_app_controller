<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_command"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="se.i_gh.smartgreencontroller.CommandActivity"
    tools:showIn="@layout/activity_command">

    <Button
        android:text="推送"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_pub"
        android:layout_alignBaseline="@+id/bt_clear"
        android:layout_alignBottom="@+id/bt_clear"
        android:layout_alignEnd="@+id/et_command"
        android:layout_marginEnd="24dp" />

    <TextView
        android:text="输入指令： "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/tv_command"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/et_command"
        android:layout_marginStart="22dp"
        android:layout_alignBaseline="@+id/tv_command"
        android:layout_alignBottom="@+id/tv_command"
        android:layout_toEndOf="@+id/tv_command" />

    <Button
        android:text="清空"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_clear"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/et_command"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bt_open_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_command"
        android:layout_below="@+id/bt_clear"
        android:layout_marginStart="54dp"
        android:layout_marginTop="42dp"
        android:text="视频启动" />

    <Button
        android:id="@+id/bt_close_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt_open_video"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/bt_open_video"
        android:text="视频关闭" />

    <Button
        android:id="@+id/bt_open_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="数据开启"
        android:layout_below="@+id/bt_open_video"
        android:layout_alignStart="@+id/bt_open_video" />

    <Button
        android:id="@+id/bt_close_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数据关闭"
        android:layout_alignBaseline="@+id/bt_open_data"
        android:layout_alignBottom="@+id/bt_open_data"
        android:layout_alignStart="@+id/bt_close_video" />

    <Button
        android:id="@+id/bt_remote_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt_open_data"
        android:layout_below="@+id/bt_open_data"
        android:layout_marginTop="29dp"
        android:text="远端测试" />
</RelativeLayout>
